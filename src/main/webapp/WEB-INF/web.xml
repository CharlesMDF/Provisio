<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>conn</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
	    <servlet-name>Registration</servlet-name>
	    <jsp-file>/user_registration.jsp</jsp-file>
	</servlet>
	<servlet>
	    <servlet-name>Login</servlet-name>
	    <jsp-file>/user_login.jsp</jsp-file>
	</servlet>
	<servlet>
	    <servlet-name>Booking</servlet-name>
	    <jsp-file>/reservation_page.jsp</jsp-file>
	</servlet>
	<servlet>
	    <servlet-name>AboutUs</servlet-name>
	    <jsp-file>/about_us.jsp</jsp-file>
	</servlet>
	<servlet>
	    <servlet-name>ReservationSummary</servlet-name>
	    <jsp-file>/reservation_summary.jsp</jsp-file>
	</servlet>
	<servlet>
	    <servlet-name>PreviousReservation</servlet-name>
	    <jsp-file>/previous_reservation.jsp</jsp-file>
	</servlet>
	<servlet>
	    <servlet-name>LoyaltyPoints</servlet-name>
	    <jsp-file>/loyalty_points.jsp</jsp-file>
	</servlet>
	<servlet>
	    <servlet-name>Locations</servlet-name>
	    <jsp-file>/locations.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>Registration</servlet-name>
	    <url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>Login</servlet-name>
	    <url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>Booking</servlet-name>
	    <url-pattern>/booking</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>AboutUs</servlet-name>
	    <url-pattern>/about_us</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>ReservationSummary</servlet-name>
	    <url-pattern>/booking/summary</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>PreviousReservation</servlet-name>
	    <url-pattern>/previous</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>LoyaltyPoints</servlet-name>
	    <url-pattern>/loyalty</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
	    <servlet-name>Locations</servlet-name>
	    <url-pattern>/locations</url-pattern>
	</servlet-mapping>
</web-app>